@using HH.RMS.IService.Web.Model;
@using HH.RMS.Common.Constant;
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/easyui/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="/easyui/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="/easyui/themes/demo.css">
    <link rel="stylesheet" type="text/css" href="/Styles/main.css">
    <script type="text/javascript" src="/easyui/jquery.min.js"></script>
    <script type="text/javascript" src="/easyui/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.cookie.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.form.min.js"></script>
    @RenderSection("Heads", required: false)
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height: 120px; background: #0E2D5F;">@if (AccountModel.CurrentSession != null) { Html.RenderPartial("_TopPartial", AccountModel.CurrentSession); }</div>
    <div data-options="region:'west',split:true,title:'系统菜单'" style="width:200px;padding:10px;">
        @Html.Partial("_MenuPartial")
    </div>
    <div data-options="region:'center',title:'Center'">@RenderBody()</div>
    <div data-options="region:'south',border:false" style="height: 50px; background: #0E2D5F; padding: 10px;">south region</div>
    @RenderSection("Scripts", required: false)
    <script src="/Scripts/main.js" type="text/javascript"></script>
</body>
</html>
